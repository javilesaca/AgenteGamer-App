<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agente Gamer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Textview que muestra la cantidad gastada -->
    <TextView
        android:id="@+id/tvTotalGastos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total gastado: 0 €"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewIndicador"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/indicador_circle"
        app:layout_constraintTop_toBottomOf="@id/tvTotalGastos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"/>

    <!-- Recomendación del agente financiero -->
    <TextView
        android:id="@+id/tvRecomendacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado financiero"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewIndicador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecomendacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>




    <!-- Botón Ver Juegos -->
    <Button
        android:id="@+id/btnVerJuegos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Juegos"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/pieChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Wishlist -->
    <Button
        android:id="@+id/btnWishlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wishlist"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerJuegos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Gastos -->
    <Button
        android:id="@+id/btnGastos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gastos"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnWishlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Botón para desarrollo exclusivo y borrar datos de la Room -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset gastos (DEV)"
        android:backgroundTint="@color/design_default_color_error"
        app:layout_constraintTop_toBottomOf="@id/btnGastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

